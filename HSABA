<body>
  <div class="container">
    <h2>حاسبة التاريخ</h2>

    <!-- القسم الأول: حساب تاريخ جديد -->
    <h3>📅 احسب تاريخ جديد</h3>
    <label>تاريخ البداية:</label>
    <input type="date" id="startDate">

    <label>العدد:</label>
    <input type="number" id="amount" placeholder="مثال: 10">

    <label>الوحدة:</label>
    <select id="unit">
      <option value="days">يوم</option>
      <option value="weeks">أسبوع</option>
      <option value="months">شهر</option>
      <option value="years">سنة</option>
    </select>

    <button onclick="calculateDate()">احسب التاريخ</button>
    <div id="result1" class="result"></div>

    <hr>

    <!-- القسم الثاني: حساب الفرق -->
    <h3>⏳ احسب الفرق بين تاريخين</h3>
    <label>التاريخ الأول:</label>
    <input type="date" id="date1">

    <label>التاريخ الثاني:</label>
    <input type="date" id="date2">

    <button onclick="calculateDiff()">احسب الفرق</button>
    <div id="result2" class="result"></div>
  </div>

  <!-- التوقيع -->
  <div class="signature">
    ✍️ أحمد السناني
  </div>

  <script>
    function calculateDate() {
      const startDate = document.getElementById("startDate").value;
      const amount = parseInt(document.getElementById("amount").value);
      const unit = document.getElementById("unit").value;

      if (!startDate || isNaN(amount)) {
        document.getElementById("result1").innerText = "⚠️ رجاءً أدخل البيانات بشكل صحيح";
        return;
      }

      let date = new Date(startDate);

      if (unit === "weeks") {
        date.setDate(date.getDate() + (amount - 1) * 7);
      } else if (unit === "months") {
        date.setMonth(date.getMonth() + (amount - 1));
      } else if (unit === "years") {
        date.setFullYear(date.getFullYear() + (amount - 1));
      } else {
        date.setDate(date.getDate() + amount - 1);
      }

      const newDate = date.toISOString().split('T')[0];
      const daysOfWeek = ["الأحد","الإثنين","الثلاثاء","الأربعاء","الخميس","الجمعة","السبت"];
      const dayName = daysOfWeek[date.getDay()];

      document.getElementById("result1").innerText = 
        "📅 التاريخ الناتج: " + newDate + " - " + dayName;
    }

    function calculateDiff() {
      const d1 = document.getElementById("date1").value;
      const d2 = document.getElementById("date2").value;

      if (!d1 || !d2) {
        document.getElementById("result2").innerText = "⚠️ رجاءً اختر التاريخين لحساب الفرق";
        return;
      }

      const date1 = new Date(d1);
      const date2 = new Date(d2);

      let diffTime = Math.abs(date2 - date1);
      let diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

      document.getElementById("result2").innerText =
        "🔢 الفرق بين التاريخين: " + diffDays + " يوم";
    }
  </script>
